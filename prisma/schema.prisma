generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model Show {
  id          String   @id @default(cuid())
  showId      String   @unique
  name        String
  overview    String
  genres      String[]
  numSeason   Int
  numEpisodes Int
  firstAired  DateTime
  lastAired   DateTime
  networks    String[]
  rating      Float
  languages   String[]
}

